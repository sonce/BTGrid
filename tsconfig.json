{
    "compilerOptions": {
        "moduleResolution": "node",
        "target": "es5",
        "module": "commonJS",
        // "removeComments": true,
        "esModuleInterop": true,
        "noImplicitAny": true,
        "sourceMap": true,
        // "listEmittedFiles": true,
        "declaration": true,
        "declarationDir": "dist/types",
        "outDir": "dist/lib",
        "baseUrl": ".",
        "paths": {
            "*": [
                "custom_typings/*"
            ]
        },
        "typeRoots": [
            "node_modules/@types"
        ]
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules",
        "'./**/*.d.ts'"
    ]
}
